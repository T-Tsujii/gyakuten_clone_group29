<h1>動画一覧</h1>
<div id="container">
    <div class="row">
        <% @monetizes.each.with_index(@monetizes.offset_value + 1) do |monetize, i| %>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <div class="card border-dark mb-3">
            <div class="card-header p-0">
                <div class="card-header embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" width="560" height="315" src=<%= monetize.url %> frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
                <div class="card-body">
                <a href="#" class="btn btn-primary">視聴済みにする</a>
                <p class="card-text movie-title">
                    <%= "No.#{i}: " + monetize.title %>
                </p>
                </div>
            </div>
            </div>
        </div>
        <% end %>
    </div>
    <%= paginate @monetizes %>
</div>