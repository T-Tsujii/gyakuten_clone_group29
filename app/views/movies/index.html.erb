<h1>動画一覧</h1>
<div id="container">
  <div class="row">
    <% @movies.each.with_index(@movies.offset_value + 1) do |movie, i| %>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <div class="card border-dark mb-3">
          <div class="card-header p-0">
            <div class="card-header embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" width="560" height="315" src=<%= movie.url %> frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
            <div class="card-body">
              <% if @watched_movie_ids.include?(movie.id) %>
                <%= render "watched", movie: movie %>
              <% else %>
                <%= render "not_watched", movie: movie %>
              <% end %>
              <p class="card-text movie-title">
                <%= "No.#{i}: " + movie.title %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @movies %>
</div>
