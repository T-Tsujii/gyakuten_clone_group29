<h1>新規投稿</h1>
<%= form_with model: @question, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "【質問】" %>
    <%= form.text_area :title, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :detail, "【詳細】" %>
    <%= form.text_area :title, class:'form-control' %>
  </div>
  <%= form.submit "送信", class:'btn btn-block btn-info' %>
<% end %>

<div id="question-container">
  <% @questions.each do |question| %>
    <%= link_to question do %>
      <div class="row question">
        <div class="col-md-7 title-container">
          <p><%= question.title %></p>
        </div>
        <div class="col-md-5 info text-right">
          <p>質問日<%= l question.created_at, format: :medium %></p>
          <p><%= question.view_count %>views</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
