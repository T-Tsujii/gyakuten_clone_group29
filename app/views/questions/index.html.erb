<h1>新規投稿</h1>
<%= form_with model: @question, local: true do |form| %>
  <div>
    <%= form.label :title, "質問" %>
    <%= form.text_area :title, cols: 50, row: 3, size: 8 %>
  </div>
  <div>
    <%= form.label :detail, "詳細" %>
    <%= form.text_area :detail, cols: 50, row: 6, size: 8 %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>

<div class="container question-container">
  <% @questions.each do |question| %>
    <%= link_to question do %>
      <div class="row question">
        <div class="col-md-7 title-container">
          <p><%= question.title %></p>
        </div>
        <div class="col-md-5 info text-right">
          <p>質問日<%= l question.created_at, format: :medium %></p>
          <%# 仮の閲覧回数 %>
          <p>13 Views</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
