<p>【質問】 <%= @question.title %></p>
<p>【詳細】 <%= @question.detail %></p>

<div class="container answer-container">
  <%# @answers.each do |answer| %>
    <div class="row answer">
      <p><%#= answer.content %></p>
    </div>
  <%# end %>
</div>

<h1>回答投稿</h1>
<%= form_with model: [@question, @answer], local: true do |form| %>
  <div>
    <%= form.label :content, "【回答】" %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>
