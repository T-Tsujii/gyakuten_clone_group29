<div id="search-box">
  <%= search_form_for @q do |f| %>
    <%= hidden_field_tag :genre, params[:genre] %>
      <div class="d-flex">
        <div class="form-group flex-grow-1">
          <%= f.search_field :title_cont, placeholder: "教材を探す", class: "form-control" %>
        </div>
        <div>
          <%= f.submit "検索", class: "btn btn-primary ml-1" %>
        </div>
      </div>
  <% end %>
</div>
