<h1>テキスト教材</h1>
<!--- 検索 --->
<%= render 'search_box' %>

<!---テキスト教材一覧（ページネーションなし） --->
<div id="container">
  <div class="row">
    <% @text_books.each.with_index(1) do |textbook, i| %>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <%= link_to text_book_path(textbook.id) do %>
          <div class="card border-dark mb-3">
            <div class="card-header p-0">
              <div class="card-header embed-responsive embed-responsive-16by9">
                <img loading="lazy" class="img-fluid" width="560" height="187" src=<%= textbook.image %> >
              </div>
              <div class="card-body" width="560" height="187">
                <% if textbook.read_by?(current_user) %>
                  <%= render "read", textbook: textbook %>
                <% else %>
                  <%= render "not_read", textbook: textbook %>
                <% end %>
                <p class="card-text textbook-title">
                  <%= "【" + textbook.genre + "】" %><br>
                  <%= "No.#{i}: " + textbook.title %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
