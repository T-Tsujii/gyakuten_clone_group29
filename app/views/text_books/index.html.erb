<h1>テキスト教材</h1>
<!--- 検索 --->
<%= render 'search_box' %>

<!---テキスト教材一覧（ページネーションなし） --->
<div id="container">
  <div class="row">
    <% @text_books.each.with_index(1) do |textbook, i| %>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <%= link_to text_book_path(textbook.id) do %>
          <div class="card border-dark mb-3">
            <div class="card-header p-0">
              <div class="card-header embed-responsive embed-responsive-16by9">
                <img loading="lazy" alt=textbook.title class="img-fluid" width="560" height="187" src="https://d5izmuz0mcjzz.cloudfront.net/uploads/text/image/185/6d99bee3-fe84-4e6b-922f-89bea1e8734d.jpeg">
              </div>
              <div class="card-body" width="560" height="187">
                <% if textbook.read_by?(current_user) %>
                  <%= link_to "読破済みを解除", text_book_reads_path(textbook.id), method: :delete %>
                <% else %>
                  <%= link_to "読破済みにする", text_book_reads_path(textbook.id), method: :post %>
                <% end %>
                <p class="card-text textbook-title">
                  <%= "No.#{i}: " + textbook.title %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
